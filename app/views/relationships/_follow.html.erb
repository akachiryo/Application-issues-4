<div class="follow">
  <% unless @user == current_user %>
    <% if current_user.following?(@user) %>
      <%= button_to 'フォロー外す', relationship_path(@relationship), class: "btn btn-primary", method: :delete %>
    <% else %>
      <%= form_for(@user.followers.new) do |f| %>
      <%= hidden_field_tag :follow_id, @user.id %>
      <%= f.submit "フォローする", class: 'btn btn-success' %>
      <%end %>
    <% end %>
  <% end %>
</div>

